<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        style="@style/AppCompat.TextView.Label.Bold"
        android:id="@+id/tvDrawerItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:paddingLeft="@dimen/drawer_item_padding_left"
        android:layout_marginTop="@dimen/drawer_item_margin_vertical"
        android:layout_marginBottom="@dimen/drawer_item_margin_vertical"
        android:textColor="@color/drawer_item_text_color"/>
</LinearLayout>