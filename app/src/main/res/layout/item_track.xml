<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/llTrackItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:padding="@dimen/list_padding"
        android:gravity="center_vertical">
        <TextView
            style="@style/AppCompat.TextView.Label.Normal"
            android:id="@+id/timeDeparture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
        <TextView
            style="@style/AppCompat.TextView.Label.Normal"
            android:id="@+id/timeDepartureDelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_vertical">
    <TextView
        style="@style/AppCompat.TextView.Label.Bold"
        android:id="@+id/stationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <TextView
        style="@style/AppCompat.TextView.Label.Normal"
        android:id="@+id/tvPlatformTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_padding"
        android:gravity="end|bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:padding="@dimen/list_padding"
        android:gravity="center_vertical">
        <TextView
            style="@style/AppCompat.TextView.Label.Normal"
            android:id="@+id/timeArrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
        <TextView
            style="@style/AppCompat.TextView.Label.Normal"
            android:id="@+id/timeArrivalDelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
    <include layout="@layout/divider"/>
</LinearLayout>